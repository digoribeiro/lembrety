{
  "name": "lembrety",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' --ext 'ts,json' --exec 'ts-node' src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "scheduler": "ts-node src/scripts/checkInstance.ts",
    "cleanup:dry-run": "ts-node src/scripts/cleanupOldReminders.ts --dry-run",
    "cleanup:details": "ts-node src/scripts/cleanupOldReminders.ts --dry-run --details",
    "cleanup:execute": "ts-node src/scripts/cleanupOldReminders.ts",
    "cleanup:safe": "ts-node src/scripts/cleanupOldReminders.ts --max-retries=10 --days-old=30"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "node-cron": "^4.2.0",
    "prisma": "^6.11.1"
  }
}
